{
  "name": "build-beacon-backend",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:up": "docker compose up -d",
    "db:generate-migration": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "build": "bun build ./src/index.ts --outdir ./dist/server --target bun",
    "start": "bun run ./dist/server/index.js"
  },
  "dependencies": {
    "better-auth": "^1.4.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "form-data": "^4.0.5",
    "hono": "^4.10.7",
    "mailgun.js": "^12.4.0",
    "pg": "^8.16.3",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0"
  }
}